script(type="text/x-template")#slider-container
  .works-slider
    .works__left
      display(
        :works="works"
        :current-work="currentWork"
        @slide="handleslide"
      )
    .works__right
      info(
        :current-work="currentWork"
      )

script(type="text/x-template")#slider-display  
  .slider(data-slide="1")
      img(:src="currentWork.photo").slider__fillpic
      thumbs(
        :works="works" 
        :currentWork="currentWork" 
      )
      btns(
        @slide="$emit('slide', $event)"
      )

script(type="text/x-template")#slider-thumbs
  .slider__preview
    ul.previews
      li.previews__item(
        v-for="work in works"
        :key="work.id"
        :class="{active: work.id === currentWork.id  }"
      )
        a.previews__item-link
          img(:src="work.photo" alt="slider-photo").previews__pic


script(type="text/x-template")#slider-btns        
  .slider__buttons
    .slider-button
      button(@click.prevent="$emit('slide', 'next')").slider-buttons__item.slider-buttons__item--slide--next
        +image("content/arrow-next.png", "arrow")  
      button(@click.prevent="$emit('slide', 'prev')").slider-buttons__item.slider-buttons__item--slide--prev
        +image("content/arrow-prev.png", "arrow")


script(type="text/x-template")#slider-info
  .info-block
    tags(
      :tags="tagsArray"
    )   
    .works__text
      h3.works__title {{currentWork.title}}
      .works__desc-text
        p {{currentWork.desc}}
      a(:href="currentWork.link").iconed-link
        +icon('link', 'iconed-link__icon')
        .iconed-link__text Посмотреть сайт
      .position_slide
        span.number {{currentWork.id}}   


script(type="text/x-template")#slider-tags
  .works__tags
    ul.tags
      li.tags__item(v-for="tag in tags" :key="tag")
        .tag {{tag}}
















    
    
    
