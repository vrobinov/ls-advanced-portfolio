}
.skills-row__list{
  width:760px;
  height:219px;
  display:flex;
}
.skills-row__item{
  width: 210px;
  height: 210px;
  position:relative;
}



.skill__shape {
  width: 200px;
  height: 200px;
  fill: transparent;
  stroke: #424244;
  stroke-width: 3px;
  transform: rotate(100deg);
}
.skill__circle--position--above{
  stroke: #d47f1e;
  stroke-width: 15px;
  stroke-dasharray: 251; 
}


.skills-row__title{
  font-size: 24px;
  font-family: "Open Sans";
  color: rgb(255, 255, 255);
  font-weight: bold;
