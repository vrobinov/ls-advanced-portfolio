}
.advantages-block{
    width: 925px;
    height: 760px;
    margin-left: 505px;
    
    position: relative;
}
.advantage-article{
    width: 591px;
    height: 166px;
      margin-bottom: 93px;
}
.advantage-title{
  font-size: 30px;
  font-family: "Open Sans";
  color: rgb(255, 255, 255);
